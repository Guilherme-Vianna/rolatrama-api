generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                 Int                     @id @default(autoincrement())
  email              String                  @unique
  password           String
  name               String
  recoveryTokens     String[]
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
  PasswordResetToken password_reset_tokens[]
}

model password_reset_tokens {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      users    @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model towns {
  id                  Int         @id @default(autoincrement())
  name                String      @default("NO_NAME")
  size                String
  whether             String
  history             String
  locationDescription String
  economy             String
  criminality         String
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  locations           locations[]
  npcs                npcs[]
}

model npcs {
  id          Int      @id @default(autoincrement())
  townId      Int?
  town        towns?   @relation(fields: [townId], references: [id])
  name        String
  race        String
  age         String
  description String
  ocupation   String
  history     String
  interest    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model locations {
  id          Int      @id @default(autoincrement())
  townId      Int
  town        towns    @relation(fields: [townId], references: [id])
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
