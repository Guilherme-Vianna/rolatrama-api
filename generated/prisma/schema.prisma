generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                 Int                     @id @default(autoincrement())
  email              String                  @unique
  password           String
  name               String
  recoveryTokens     String[]
  mygames            games[]
  games              users_games_claims[]
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
  PasswordResetToken password_reset_tokens[]
  sheets             sheets[]
}

model password_reset_tokens {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      users    @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model towns {
  id                  Int         @id @default(autoincrement())
  name                String      @default("NO_NAME")
  size                String
  whether             String
  history             String
  locationDescription String
  economy             String
  criminality         String
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  locations           locations[]
  npcs                npcs[]
}

model npcs {
  id          Int      @id @default(autoincrement())
  townId      Int?
  town        towns?   @relation(fields: [townId], references: [id])
  name        String
  race        String
  age         String
  description String
  ocupation   String
  history     String
  interest    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model locations {
  id          Int      @id @default(autoincrement())
  townId      Int
  town        towns    @relation(fields: [townId], references: [id])
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model games {
  id          Int                  @id @default(autoincrement())
  name        String
  description String
  owner       users                @relation(fields: [owner_id], references: [id], onDelete: Cascade)
  owner_id    Int
  players     users_games_claims[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model users_games_claims {
  id        Int      @id @default(autoincrement())
  game_id   Int
  user_id   Int
  game      games    @relation(fields: [game_id], references: [id], onDelete: Cascade)
  user      users    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model advantages {
  id          Int      @id @default(autoincrement())
  name        String
  cost        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model bugs {
  id          Int      @id @default(autoincrement())
  description String
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model improves {
  id          Int      @id @default(autoincrement())
  description String
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model sheets {
  id        Int      @id @default(autoincrement())
  user_id   Int
  user      users    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
